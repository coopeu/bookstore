<h1>Categories index</h1>

<table class='table table-striped'>
	<tr>
		<th>Name</th>
		<th>Actions</th>
	</tr>
	<% @categories.each do |category| %>
	<tr>
		<td><%= category.name %></td>
		<td><%= link_to 'Edit', edit_category_path(category.id) %> | 
			<%= link_to 'Delete', category_path(category.id), method: :destroy, data: {confirm: 'Are you sure to delete this category?'} %>
		</td>
	</tr>
	<% end %>
</table>
