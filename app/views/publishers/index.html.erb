<h1>Publishers index</h1>

<table class='table table-striped'>
	<tr>
		<th>Name</th>
		<th>Actions</th>
	</tr>
	<% @publishers.each do |publisher| %>
	<tr>
		<td><%= publisher.name %></td>
		<td><%= link_to 'Edit', edit_publisher_path(publisher.id) %> | 
			<%= link_to 'Delete', publisher_path(publisher.id), method: :destroy, data: {confirm: 'Are you sure to delete this publisher?'} %>
		</td>
	</tr>
	<% end %>
</table>